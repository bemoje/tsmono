{
  "name": "tsmono",
  "workspaces": [
    "pkg/api-util",
    "pkg/bfind",
    "pkg/commander-config",
    "pkg/excel-util",
    "pkg/fswalk",
    "pkg/log",
    "pkg/openai-api-client",
    "pkg/open-repo",
    "pkg/pdf-util",
    "pkg/split-sentences",
    "pkg/terminal-gpt",
    "pkg/trie-map",
    "pkg/queue",
    "pkg/matrix",
    "pkg/time",
    "pkg/tsdoc",
    "pkg/tscode",
    "pkg/sorted-array",
    "pkg/table",
    "pkg/fspath-filter",
    "pkg/fspath",
    "pkg/fs",
    "pkg/subtitles",
    "pkg/string"
  ],
  "scripts": {
    "foreach": "npm run update-readmes && ts-node -P tsconfig.json scripts/runForEach.ts",
    "update-readmes": "ts-node -P tsconfig.json scripts/updateReadmes.ts",
    "fix-docs": "ts-node -P tsconfig.json scripts/fixDocs.ts",
    "publish": "ts-node -P tsconfig.json scripts/npmPublish.ts",
    "create-package": "ts-node -P tsconfig.json scripts/createPackage.ts",
    "delete-package": "ts-node -P tsconfig.json scripts/deletePackage.ts",
    "wipe-bemoje": "ts-node -P tsconfig.json scripts/wipeBemojeNodeModules.ts",
    "lint": "nx run-many --parallel 4 -t lint",
    "test": "nx run-many --parallel 4 -t test",
    "build": "nx run-many --parallel 4 -t build",
    "docsmd": "nx run-many --parallel 4 -t docsmd",
    "docshtml": "nx run-many --parallel 4 -t docshtml",
    "prepub-old": "npm run lint && npm run test && npm run build && npm run docsmd && npm run docshtml && npm run fix-docs && npm run update-readmes",
    "prepub-build": "nx run-many --parallel 4 --targets=\"lint,test,build\"",
    "prepub-docs": "nx run-many --parallel 4 --targets=\"docsmd,docshtml\" && npm run update-readmes",
    "prepub": "npm run prepub-build && npm run prepub-docs",
    "opendocs": "start docs/html/index.html"
  },
  "dependencies": {
    "@bemoje/node-util": "latest"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/commander": "^2.12.2",
    "@types/eslint": "^8.44.0",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^29.5.3",
    "@types/mkdirp": "^2.0.0",
    "@types/node": "^20.4.8",
    "@types/pdf-parse": "^1.1.1",
    "@types/prettier": "^2.7.3",
    "@types/rimraf": "^4.0.5",
    "@types/rollup": "^0.54.0",
    "@types/strip-comments": "^2.0.1",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "camel-case": "^4.1.2",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "jest-environment-node": "^29.6.2",
    "nx": "^16.6.0",
    "nx-cloud": "latest",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "rollup": "^3.27.2",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "strip-comments": "^2.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.4",
    "typescript": "^5.1.6",
    "walkdir": "^0.4.1"
  }
}
