{
  "name": "open-repo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/open-repo/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/open-repo",
        "main": "packages/open-repo/src/index.ts",
        "tsConfig": "packages/open-repo/tsconfig.lib.json",
        "assets": ["packages/open-repo/src/bin"],
        "project": "packages/open-repo/package.json",
        "compiler": "swc",
        "format": ["cjs"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs open-repo {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/open-repo/**/*.ts", "packages/open-repo/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/open-repo/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
