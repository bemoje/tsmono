{
  "name": "bfind",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/bfind/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": ["{options.outputPath}"],
      "options": {
        "script": "build",
        "project": "packages/bfind/package.json"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs bfind {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/bfind/**/*.ts", "packages/bfind/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/bfind/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
