{
  "name": "repoman",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/repoman/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/repoman/**/*.ts",
          "packages/repoman/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/repoman/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "build": {
      "executor": "nx:run-script",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "script": "build",
        "project": "packages/repoman/package.json"
      }
    }
  },
  "tags": []
}
