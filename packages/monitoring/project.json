{
  "name": "monitoring",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/monitoring/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/monitoring",
        "main": "packages/monitoring/src/index.ts",
        "tsConfig": "packages/monitoring/tsconfig.lib.json",
        "assets": ["packages/monitoring/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/monitoring/**/*.ts", "packages/monitoring/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/monitoring/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
