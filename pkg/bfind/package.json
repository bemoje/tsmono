    "@bemoje/commander-config": "latest",
    "@bemoje/node-util": "latest",
    "@bemoje/trie-map": "latest",
    "cli-color": "^2.0.3",
    "commander": "^11.0.0",
    "lodash": "^4.17.21",
    "walkdir": "^0.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bemoje/tsmono.git"
