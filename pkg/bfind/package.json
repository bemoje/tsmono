    "@bemoje/fspath-filter": "latest",
    "@bemoje/trie-map": "latest",
    "@bemoje/commander-config": "latest",
    "@bemoje/fs": "latest",
    "@bemoje/node-util": "latest",
    "cli-color": "^2.0.3",
    "commander": "^11.0.0",
    "lodash": "^4.17.21",
    "walkdir": "^0.4.1"
  },
