{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    //   // Transpilation settings.
    "module": "ES2015",
    "target": "ES2015",

    //   // Output settings.
    // "charset": "utf-8",
    "newLine": "LF",
    "sourceMap": true,
    "removeComments": false,

    // Type declaration settings.
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true
  },
  "exclude": ["./**/*/*.test.ts", "./bin"]
}
