{
  "name": "@bemoje/open-repo",
  "version": "1.0.6",
  "description": "CLI-shorthand to opening a local repository in your IDE.",
  "main": "dist/index.cjs.js",
  "types": "dist/index.d.ts",
  "bin": {
    "repo": "./bin/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "lint": "eslint \"*/**/*.{ts,js,json}\" --fix",
    "test": "jest --preset ts-jest",
    "build": "rimraf dist && rollup --config ./rollup.config.js --bundleConfigAsCjs",
    "docs": "rimraf ../../docs/open-repo && typedoc --out ../../docs/open-repo --entryPoints src/index.ts",
    "prepub": "npm run lint && npm run build && npm run test && npm run docs"
  },
