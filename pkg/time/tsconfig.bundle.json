{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2015",
    "target": "ES2015",
    "rootDir": "./src",
    "declarationDir": "./dist/types",
    "removeComments": false,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "exclude": ["jest.config.ts", "./**/*/*.test.ts", "./**/*/*.example.ts", "./bin"]
}
